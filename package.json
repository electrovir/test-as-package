{
    "name": "test-as-package",
    "version": "2.0.0",
    "description": "Test a repository as an npm package applied to internal test repos.",
    "keywords": [
        "test",
        "package",
        "repo",
        "npm",
        "internal"
    ],
    "homepage": "https://github.com/electrovir/test-as-package",
    "bugs": {
        "url": "https://github.com/electrovir/test-as-package/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/electrovir/test-as-package.git"
    },
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "type": "module",
    "main": "src/index.ts",
    "module": "src/index.ts",
    "types": "src/index.ts",
    "bin": "dist/cli/cli.script.js",
    "scripts": {
        "compile": "virmator compile",
        "docs": "virmator docs",
        "format": "virmator format",
        "lint": "virmator lint fix",
        "publish": "virmator publish npm run test:all",
        "test": "virmator test node",
        "test:all": "npm run compile && concurrently --colors --kill-others-on-fail -c auto --names tests,spelling,format,docs,deps,lint \"npm run test\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:docs\" \"npm run test:deps\" \"npm run test:lint\"",
        "test:deps": "virmator deps check",
        "test:docs": "virmator docs check",
        "test:format": "virmator format check",
        "test:lint": "virmator lint",
        "test:spelling": "virmator spellcheck",
        "test:update": "npm run test update"
    },
    "dependencies": {
        "@augment-vir/assert": "^30.4.0",
        "@augment-vir/common": "^30.4.0",
        "@augment-vir/node": "^30.4.0",
        "@types/node": "^22.9.0",
        "object-shape-tester": "^3.0.0"
    },
    "devDependencies": {
        "@augment-vir/test": "^30.5.0",
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.14.0",
        "@stylistic/eslint-plugin": "^2.10.1",
        "@stylistic/eslint-plugin-ts": "^2.10.1",
        "@typescript-eslint/eslint-plugin": "^8.13.0",
        "c8": "^10.1.2",
        "cspell": "^8.16.0",
        "dependency-cruiser": "^16.6.0",
        "esbuild": "^0.24.0",
        "eslint": "^9.14.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsdoc": "^50.4.3",
        "eslint-plugin-monorepo-cop": "^1.0.2",
        "eslint-plugin-playwright": "^2.0.1",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-require-extensions": "^0.1.3",
        "eslint-plugin-sonarjs": "^2.0.4",
        "eslint-plugin-unicorn": "^56.0.0",
        "istanbul-smart-text-reporter": "^1.1.5",
        "markdown-code-example-inserter": "^3.0.0",
        "npm-check-updates": "^17.1.10",
        "prettier": "^3.3.3",
        "prettier-plugin-interpolated-html-tags": "^1.0.5",
        "prettier-plugin-jsdoc": "^1.3.0",
        "prettier-plugin-multiline-arrays": "^3.0.6",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-packagejson": "^2.5.3",
        "prettier-plugin-sort-json": "^4.0.0",
        "prettier-plugin-toml": "^2.0.1",
        "type-fest": "^4.26.1",
        "typedoc": "^0.26.11",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.13.0",
        "virmator": "^13.7.0"
    },
    "engines": {
        "node": ">=22"
    }
}
